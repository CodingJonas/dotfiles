# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 && pkill -RTMIN+2 i3blocks # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 && pkill -RTMIN+2 i3blocks  # decrease screen brightness

